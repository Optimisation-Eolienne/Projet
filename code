import numpy as np
import matplotlib.pyplot as plt
import pandas as pd
import plotly.graph_objects as go
from cylp.cy import CyClpSimplex
from cylp.py.modeling.CyLPModel import CyLPArray


#| Parametres

N_pays = 15
N_sites = 642
N_heures_par_annee = 24*365
N_annees = 1/365
N_heures = int(np.ceil(N_heures_par_annee*N_annees))

P_tot = 500000
kappa = 0.17
delta = 0.02
T = 3
N_periodes = int(np.floor(N_heures/T))


#| Chargement des donnees

sites = pd.read_csv("Sites.csv",index_col="index site").sort_index()
rendements_offshore = np.genfromtxt('Rendements_offshore.csv', delimiter=',')[:,:N_heures]
rendements_onshore = np.genfromtxt('Rendements_onshore.csv', delimiter=',')[:,:N_heures]

#| Matrice et vecteurs principaux utilisés dans les problèmes 

is_offshore = pd.Series(0,index=range(N_sites))
is_offshore[sites["capacite offshore"]=="Oui"] = 1
is_offshore = CyLPArray(is_offshore)


rendements = np.zeros((N_sites,N_heures))
for i in range(N_sites):
    if is_offshore[i]:
        rendements[i,:] = rendements_offshore[i,:N_heures]
    else:
        rendements[i,:] = rendements_onshore[i,:N_heures]

c = CyLPArray(np.zeros(N_sites))
for i in range(N_sites):
    c[i] = np.sum(rendements[i,:])
    
P_max = CyLPArray(sites["capacites"])

A =  np.matrix(np.zeros((N_periodes-1,N_sites)))
for i in range(N_periodes-1):
    for j in range(N_sites):
        A[i,j] = np.sum(rendements[j,(i+1)*T:(i+2)*T-1])-np.sum(rendements[j,i*T:(i+1)*T-1])

#| Resolution des problemes

def model_1(P_tot):
    
    simplex = CyClpSimplex()
    
    #Variables
    P = simplex.addVariable('P',N_sites)
    v = simplex.addVariable('v',N_periodes-1)
    
    #Contraintes
    simplex.addConstraint(0 <= 2*P <= 2*P_max,"Bornes sur les puissances")
    simplex.addConstraint(P.sum() == P_tot,"Contrainte P_tot")
    simplex.addConstraint(is_offshore * P == kappa * P_tot,"Contrainte offshore")
    simplex.addConstraint(v.sum() <= (N_periodes-1)*delta*P_tot*T,"Contrainte variance 1")
    simplex.addConstraint(A * P - v <= 0,"Contrainte variance 2")
    simplex.addConstraint(-A * P - v <= 0,"Contrainte variance 3")
    
    #Objectif
    simplex.objective = -c * P
    
    #Solution
    simplex.primal()
    print(simplex.getStatusString())
    
    return simplex.primalVariableSolution['P'],-simplex.objectiveValue

def model_2():
    
    simplex = CyClpSimplex()
    
    #Variables
    P = simplex.addVariable('P',N_sites)
    v = simplex.addVariable('v',N_periodes-1)
    
    #Contraintes
    simplex.addConstraint(0 <= 2*P <= 2*P_max,"Bornes sur les puissances")
    simplex.addConstraint(P.sum() <= P_tot,"Contrainte P_tot")
    simplex.addConstraint(is_offshore * P == kappa * P_tot,"Contrainte offshore")
    simplex.addConstraint(v.sum() <= (N_periodes-1)*delta*P_tot*T,"Contrainte variance 1")
    simplex.addConstraint(A * P - v <= 0,"Contrainte variance 2")
    simplex.addConstraint(-A * P - v <= 0,"Contrainte variance 3")
    
    #Objectif
    simplex.objective = -c * P
    
    #Solution
    simplex.primal()
    print(simplex.getStatusString())
    
    return simplex.primalVariableSolution['P'],-simplex.objectiveValue

def model_3():
    
    simplex = CyClpSimplex()
    
    #Variables
    P = simplex.addVariable('P',N_sites)
    
    #Contraintes
    simplex.addConstraint(0 <= 2*P <= 2*P_max,"Bornes sur les puissances")
    simplex.addConstraint(P.sum() == P_tot,"Contrainte P_tot")
    simplex.addConstraint(is_offshore * P == kappa * P_tot,"Contrainte offshore")
    simplex.addConstraint(A * P <= delta*P_tot*T,"Contrainte variance 1")
    simplex.addConstraint(-A * P <= delta*P_tot*T,"Contrainte variance 2")
    
    #Objectif
    simplex.objective = -c * P
    
    #Solution
    simplex.primal()
    print(simplex.getStatusString())
    
    return simplex.primalVariableSolution['P'],-simplex.objectiveValue
    
def model_4():
    
    r = np.append(np.ones(T),-np.ones(T))
    M = np.zeros((N_periodes-1,N_heures*N_sites))
    for i in range(N_periodes-1):
        for j in range(0,N_sites*N_heures,N_heures):
            M[i,i*T:(i+2)*T] = r
    
    """for j in range(N_periodes-1):
        for i in range(N_heures*N_sites):
            if M[j,i]!= 0:
                print(j,i)
    """
    simplex = CyClpSimplex()
    
    #Variables
    P = simplex.addVariable('P',N_sites)
    v = simplex.addVariable('v',N_periodes-1)
    u = simplex.addVariable('u',N_heures*N_sites)
    
    #Contraintes
    simplex.addConstraint(0 <= 2*P <= 2*P_max,"Bornes sur les puissances")
    simplex.addConstraint(P.sum() == P_tot,"Contrainte P_tot")
    simplex.addConstraint(is_offshore * P == kappa * P_tot,"Contrainte offshore")
    
    
    #Contraintes hardcores
    simplex.addConstraint(v.sum() <= (N_periodes-1)*delta*P_tot*T)
    simplex.addConstraint(0 <= u,"Bornes sur l'écrêtement")
    for i in range(N_sites):
        for j in range(N_heures):
            simplex.addConstraint(u[i*N_heures+j] - rendements[i,j] * P[i] <= 0)
    simplex.addConstraint(A * P + M * u - v <= 0)
    simplex.addConstraint(-A * P - M * u - v <= 0)
    
    #Objectif
    simplex.objective = -c * P + u.sum()
    
    #Solution
    simplex.primal()
    print(simplex.getStatusString())
    
    return simplex.primalVariableSolution['P'],-simplex.objectiveValue
    

def plotModel_Energie(t,P,E):
    
    E_tot = np.transpose(P)@rendements
    P_offshore = np.zeros(N_sites)
    for i in range(N_sites):
        if is_offshore[i]:
            P_offshore[i] = P[i]
    E_offshore = np.transpose(P_offshore)@rendements
    E_onshore = E_tot - E_offshore
    proportion_offshore = np.sum(E_offshore)/E
    proportion_onshore = 1 - proportion_offshore
    
    fig = plt.figure(figsize=(16,9))
    plt.subplots_adjust(hspace=0.5)
    g1 = fig.add_subplot(3,1,1)
    g2 = fig.add_subplot(3,1,2)
    g3 = fig.add_subplot(3,1,3)
    
    g1.set_title("Production d'énerge totale")
    g1.set_xlabel("Temps [année]")
    g1.set_ylabel("Energie [MWh]")
    g1.plot(t,E_tot)
    
    g2.set_title("Production d'énergie onshore")
    g2.set_xlabel("Temps [année]")
    g2.set_ylabel("Energie [MWh]")
    g2.plot(t,E_onshore)
    
    g3.set_title("Production d'énergie offshore")
    g3.set_xlabel("Temps [année]")
    g3.set_ylabel("Energie [MWh]")
    g3.plot(t,E_offshore)
    
    plt.subplots_adjust(hspace=0.5)
    plt.show()
    
    print("Energie totale produite : {:.0f} [MWh]".format(E))
    print("avec une proportion de {:.2f}% d'énergie onshore et {:.2f}% d'énergie offshore" \
          .format(100*proportion_onshore,100*proportion_offshore))
    
def plotModel_Rendements(t,P):
    N_installations = 0
    rendement_total = np.zeros(N_heures)
    
    for i in range(N_sites):
        if np.around(P[i],3)!=0:
            N_installations += 1
            rendement_total += rendements[i,:N_heures]
    
    rendement_total = rendement_total/N_installations
    rendement_moyen = np.sum(rendement_total)/N_heures
    
    fig = plt.figure(figsize=(16,3))
    g1 = fig.add_subplot()
    
    g1.set_title("Evolution du rendement")
    g1.set_xlabel("Temps [année]")
    g1.set_ylabel("Rendement [/]")
    g1.plot(t,rendement_total)
    
    plt.show()
    
    print("Le rendement moyen est de {:.2f} [/]".format(rendement_moyen))

def mapModel(P):
    fig = go.Figure(data=go.Scattergeo(
            lon = sites["longitude"],
            lat = sites["latitude"],
            hovertext = sites["pays"],
            marker = dict(
                color = sites["couleur"],
                symbol = "circle",
                size = np.around(P)/300)
            ))
    fig.update_layout(
            title = "Repartion des puissances installées",
            geo_scope = "europe"
        )
    
    fig.show()
    
def foo():
    P_new = 0
    theta= np.linspace(0.5,2,15)
    f = np.zeros(len(theta))
    for i in range(len(theta)):
        P_new = P_tot
        P = model_1(P_new*theta[i])[0]
        f[i] = (rendements.dot(np.ones(N_heures)).T).dot(P)
    
    fig = plt.figure(figsize=(4,4))
    g1 = fig.add_subplot(1,1,1)
    
    g1.scatter(theta,f)
    
    plt.plot()

def main():
    result = model_4()
    t = np.linspace(1,N_heures,N_heures)/N_heures_par_annee 
    plotModel_Energie(t,result[0],result[1])
    plotModel_Rendements(t,result[0])
    
main()
